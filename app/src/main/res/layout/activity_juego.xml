<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_juego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="proyecto.laboratorio.memoriacamilogarritano.JuegoActivity"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/linearLayout1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="36sp"
            android:gravity="center_horizontal"
            android:layout_toStartOf="@+id/imageViewParlante"
            android:layout_alignParentStart="true"
            android:layout_weight="1.96" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:src="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/imageViewParlante"
            android:layout_alignParentEnd="true"
            android:padding="2dp"
            android:background="#000000"
            android:layout_weight="1.00" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:layout_below="@id/linearLayout1"
        android:id="@+id/layoutRespuestas"
        android:gravity="center_vertical|center_horizontal">

        <!--ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView1"
            android:layout_weight="0.25" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView2"
            android:layout_weight="0.25"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView3"
            android:layout_weight="0.25"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView4"
            android:layout_weight="0.25"/-->

    </LinearLayout>

</RelativeLayout>
